{
    "name": "erc2280",
    "version": "1.1.0",
    "description": "ERC2280 - erc-20 extension for native meta transaction support",
    "main": "truffle-config.js",
    "directories": {
        "test": "test"
    },
    "dependencies": {
        "@openzeppelin/contracts": "^2.3.0",
        "@ticket721/e712": "0.2.0",
        "ethers": "^4.0.36",
        "truffle": "^5.0.35"
    },
    "devDependencies": {
        "@commitlint/cli": "^7.5.2",
        "@commitlint/config-conventional": "^7.5.0",
        "@htmlacademy/editorconfig-cli": "^1.0.0",
        "conventional-changelog-cli": "^2.0.12",
        "husky": "^1.3.1",
        "solhint": "^2.3.0",
        "coveralls": "^3.0.6",
        "solidity-coverage": "^0.7.0-beta.2"
    },
    "editorconfig-cli": [
        "package.json",
        "truffle-config.js",
        "contracts/**/*.sol",
        "migrations/**/*.js"
    ],
    "scripts": {
        "test:coverage": "truffle run coverage",
        "test:editorconfig": "editorconfig-cli",
        "test:lint": "solhint contracts/**/*.sol",
        "coverage:upload": "cat ./coverage/lcov.info | coveralls",
        "test": "npm run test:truffle"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ticket721/erc2280.git"
    },
    "keywords": [
        "erc20"
    ],
    "author": "Iulian Rotaru",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ticket721/erc2280/issues"
    },
    "homepage": "https://github.com/ticket721/erc2280#readme",
    "husky": {
        "hooks": {
            "pre-commit": "editorconfig-cli",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
